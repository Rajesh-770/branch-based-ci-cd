pipeline {
    agent any

    environment {
        APP_NAME = "branch-based-app"
        APP_PORT = "8085"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install & Test') {
            steps {
                bat '''
                python --version
                pip install -r requirements.txt
                '''
            }
        }

        stage('Docker Build') {
            steps {
                bat '''
                docker build -t %APP_NAME%:latest .
                '''
            }
        }

        stage('Deploy') {
            steps {
                bat '''
                docker stop %APP_NAME% || exit 0
                docker rm %APP_NAME% || exit 0
                docker run -d -p %APP_PORT%:8080 --name %APP_NAME% %APP_NAME%:latest
                '''
            }
        }
    }
}
