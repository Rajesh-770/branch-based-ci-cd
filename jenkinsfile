pipeline {
    agent any

    environment {
        IMAGE_NAME = "branch-ci-app"
        CONTAINER_NAME = "branch-ci-app-container"
        APP_PORT = "8085"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Build') {
            steps {
                bat """
                docker build -t %IMAGE_NAME% .
                """
            }
        }

        stage('Deploy') {
            steps {
                bat """
                docker rm -f %CONTAINER_NAME% || exit 0
                docker run -d -p %APP_PORT%:8080 --name %CONTAINER_NAME% %IMAGE_NAME%
                """
            }
        }
    }

    post {
        success {
            echo "Application deployed successfully üöÄ"
        }
        failure {
            echo "Pipeline failed ‚ùå"
        }
    }
}
